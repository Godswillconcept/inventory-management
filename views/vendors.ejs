<%- include('includes/header') %>
<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/vendors">Vendors</a></li>
        <li class="breadcrumb-item active" aria-current="page">All</li>
      </ol>
    </nav>
  </div>
</div>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="d-flex">
      <h6 class=" p-2 m-0 font-weight-bold text-primary">Available Vendors</h6>
      <a href="/add-vendor"
      class="btn btn-primary float-right ml-auto btn-icon-split"
      >
        <span class="icon text-white-50">
          <i class="fas fa-plus"></i>
        </span>
        <span class="text">New Vendor</span>
      </a>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered table-sm"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Phone</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% for( let vendor of vendors ) { %>

          <tr>
            <td scope="col"><img src="/vendors/<%- vendor.photo %>" width="30"></td>
            <td scope="col"><%- vendor.name %></td>
            <td scope="col"><%- vendor.email %></td>
            <td scope="col"><%- vendor.address %></td>
            <td scope="col"><%- vendor.phone %></td>
            <td scope="col dropdown">
              <button
                type="button"
                class="btn btn-primary dropdown-toggle"
                data-toggle="dropdown"
              >
              </button>
              <ul class="dropdown-menu">
                <li><a href="/vendor/<%- vendor.id %>/delete " class="dropdown-item"
                  ><i class="fas fa-trash text-danger"></i
                > Delete</a></li>
              </li><a href="/vendor/<%- vendor.id %>/details " class="dropdown-item"
                  ><i class="fas fa-eye text-success"></i
                > Details</a></li>
                
              </ul>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
